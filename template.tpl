const setCookie = require('setCookie');
const getCookieValues = require('getCookieValues');
const getUrl = require('getUrl');
const isConsentGranted = require('isConsentGranted');
const addConsentListener = require('addConsentListener');
const getTimestampMillis = require('getTimestampMillis');

const COOKIE_NAME = data.cookieName;
const CLICK_PARAM = data.paramName;
const MAX_AGE = 90 * 24 * 60 * 60;

const url = getUrl();
var isHttps = false;
if (url && url.indexOf('https://') === 0) { isHttps = true; }
const COOKIE_OPTIONS = {
  domain: 'auto',
  path: '/',
  'max-age': MAX_AGE,
  samesite: 'Lax',
  secure: isHttps
};

var finished = false;
function finishOnce() {
  if (!finished) {
    finished = true;
    data.gtmOnSuccess();
  }
}

function hasParam(name) {
  if (!url) return false;
  var q = url.indexOf('?'); if (q === -1) return false;
  var query = url.substring(q + 1);
  return ('&' + query).indexOf('&' + name + '=') !== -1;
}
function getParamRaw(name) {
  if (!url) return null;
  var q = url.indexOf('?'); if (q === -1) return null;
  var query = url.substring(q + 1);
  var parts = query.split('&');
  for (var i = 0; i < parts.length; i++) {
    var kv = parts[i].split('=');
    if (kv[0] === name) return (kv.length > 1 ? kv[1] : '');
  }
  return null;
}
function buildSeedTs() {
  var tsSecRounded = ((getTimestampMillis() + 500) / 1000) | 0;
  return 'GCL.' + tsSecRounded;
}
function writeCookie(val) { setCookie(COOKIE_NAME, val, COOKIE_OPTIONS); }

function maybeCreateOrAppend() {
  if (hasParam('gclid')) return;
  var lnidRaw = getParamRaw(CLICK_PARAM);
  if (!lnidRaw) return;

  var existingArr = getCookieValues(COOKIE_NAME);
  var existing = (existingArr && existingArr.length) ? existingArr[0] : '';

  if (!existing) {
    writeCookie(buildSeedTs() + '.' + lnidRaw);
    return;
  }

  var firstDot = existing.indexOf('.');
  var secondDot = (firstDot === -1) ? -1 : existing.indexOf('.', firstDot + 1);
  if (secondDot === -1) {
    writeCookie(existing + '.' + lnidRaw);
  }
}

function runWithConsent() {
  if (!isConsentGranted('ad_storage')) { finishOnce(); return; }
  maybeCreateOrAppend();
  finishOnce();
}

addConsentListener('ad_storage', runWithConsent);
runWithConsent();


